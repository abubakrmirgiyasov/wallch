<Window x:Class="WallCh.Desktop.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallCh.Desktop"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        MinHeight="400" MinWidth="400"
        x:Name="Main_W">
    <Grid x:Name="Main_G">

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                MouseDown="OnHeaderBorder">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <StackPanel Grid.Column="0">
                    <Image Source="{StaticResource DarkThemeLogo}"
                           Width="32" Height="32"
                           Margin="5, 3 0, 0" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" />
                    <TextBlock Text="WallCH"
                               FontSize="22"
                               FontFamily="{StaticResource NosiferRegular}"
                               Foreground="{StaticResource Dark2}"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Margin="45, -30, 0, 0"
                               x:Name="Logo_T"
                               MouseLeftButtonDown="OnLogoText_Click" />
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="1">
                    <Grid HorizontalAlignment="Right"
                          Height="35"
                          Margin="0, 2, 2, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="40" />
                        </Grid.ColumnDefinitions>

                        <Button Content="🗗" 
                                Grid.Column="0"
                                Margin="0, 0, 30, 0"
                                Click="OnDropdownMenu_Click"/>
                        <Button Content="🗕" 
                                Grid.Column="1"
                                x:Name="Minimize_B"
                                Style="{StaticResource TransparentButton}"
                                Click="OnMinimizeWindow_Click" />
                        <Button Content="▢"
                                Grid.Column="2"
                                x:Name="WindowState_B"
                                Style="{StaticResource TransparentButton}"
                                Click="OnWindowState_Click" />
                        <Button Content="╳" 
                                Grid.Column="3"
                                x:Name="Exit_B"
                                Style="{StaticResource OnClickRedButton}"
                                Click="OnExitButton_Click" />
                    </Grid>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Column="0"
                Grid.Row="3"
                Grid.ColumnSpan="3">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ProgressBar Grid.Column="0"
                                 Height="15"
                                 VerticalAlignment="Center" 
                                 Value="45" 
                                 Margin="5, 3, 0, 0" />

                    <TextBlock Text="Loading..."
                               Grid.Column="1"
                               FontFamily="{StaticResource ExoBold}"
                               Foreground="{StaticResource Dark2}"
                               Margin="5, 0, 0, 0"
                               VerticalAlignment="Center" />

                </Grid>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
